{% extends 'base.html.twig' %}

{% block title %}Airnb clone{% endblock %}

{% block body %}

<style  type="text/css">

.card:hover{
   transform: scale(1.05);
box-shadow: 0 10px 20px rgba(0,0,0,.12), 0 4px 8px rgba(0,0,0,.06);
opacity: 0.9;
}
</style>


<div class="flats-container">

      {% for flat in flats %}
           <a href="{{ path("show_flat", {'id': flat.id}) }}" class="text-decoration-none text-dark">
          <div class="card border border-white" style="width: 18rem;">
            <img src="{{ asset('images/products/' ~ flat.productImages[0].imageName)}}" class="card-img-top rounded" alt="...">
            <div class="card-body">
              <p class="card-text">{{ flat.description|u.truncate(45,'...')|capitalize }}</p>
              <p class="card-text"><strong>{{ flat.pricePerDay }} $</strong> night</p>

            </div>
          </div>
          </a>
      {% endfor %}


</div>

{% endblock %}
