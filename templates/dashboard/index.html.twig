{% extends 'base.html.twig' %}

{% block title %}Dashboard{% endblock %}

{% block body %}
<div class="d-flex justify-content-between m-3 align-items-center">
    <h1 class="">Dashboard</h1>
    <a href="{{ path('dashboard_flat_new') }}" class="btn btn-outline-success m-3">Add a flat</a>
</div>


<div class="user-container m-3 p-2 rounded bg-info">
  <h3 class="text-white">{{ app.user.username|title}}</h3>
</div>

<h3 class="m-5">my bookings</h3>
<div class=" d-flex justify-content-center align-items-center">


    {% for booking in app.user.bookings %}
    <div class="bg-secondary">
       <ul>
          {% set price = date(booking.endDate).diff(date(booking.startDate)) %}
          <li>{{ booking.flat.address }}</li>
          <li>from: {{ booking.startDate|date("m/d/Y")  }}</li>
          <li>to: {{ booking.endDate|date("m/d/Y")  }}</li>
          <li>price: {{ price.days * booking.flat.pricePerDay }} $</li>
        </ul>
    </div>

    {% endfor %}
</div>

<h3 class="m-5">my rents</h3>
<div class=" d-flex justify-content-center align-items-center">


    {% for flat in app.user.flats %}
      {% for booking in flat.bookings %}
    <div class="bg-secondary">
       <ul>
          {% set price = date(booking.endDate).diff(date(booking.startDate)) %}
          <li>{{ booking.flat.address }}</li>
          <li>from: {{ booking.startDate|date("m/d/Y")  }}</li>
          <li>to: {{ booking.endDate|date("m/d/Y")  }}</li>
          <li>price: {{ price.days * booking.flat.pricePerDay }} $</li>
        </ul>
    </div>

    {% endfor %}
    {% endfor %}
</div>







<h3 class="m-5">my flats</h3>
<div class="flats-container">

      {% for flat in flats %}
           <a href="{{ path("show_flat", {'id': flat.id}) }}" class="text-decoration-none text-dark">
          <div class="card" style="width: 18rem;">
            <img src="{{ asset('images/products/' ~ flat.productImages[0].imageName)}}" class="card-img-top" alt="...">
            <div class="card-body">
              <p class="card-text">{{ flat.description }}</p>
              <p class="card-text">{{ flat.address }}</p>
              <p class="card-text">owner: {{ flat.owner.username }}</p>
              <p class="card-text">price/day: {{ flat.pricePerDay }} $</p>

               <div class="d-flex justify-content-center">

                  <div class="m-3">
                    <a href="{{ path('dashboard_flat_edit', {'id':flat.id}) }}" class="btn btn-outline-warning">Modify</a>
                  </div>

                  <div class="m-3">
                    <form method="POST" style="display: inline-block"  action="{{ path('flat_destroy', {'id':flat.id}) }}" onsubmit="return confirm('Are you sure you want to delete this flat?')">
                        <input type="hidden" name="_method" value="SUP">
                        <input type="hidden" name="_token" value="{{csrf_token('SUP' ~ flat.id)}}">
                        <input type="submit" value="Delete" class="btn btn-outline-danger">
                          </form>
                  </div>

              </div>

            </div>
          </div>
          </a>
      {% endfor %}


</div>
{% endblock %}
